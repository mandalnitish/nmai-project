{
  "framework": "create-react-app",

  "rewrites": [
    {
      "source": "/privacy-policy",
      "destination": "/privacy-policy.html"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://api.nmai.in/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "https://api.nmai.in/robots.txt"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}